{
	"name": "lintlock",
	"version": "0.0.0",
	"description": "CLI for eslint-plugin-lockfile",
	"bin": "./bin.mjs",
	"exports": {
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"[cli] v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/lockfile-tools.git",
		"directory": "packages/cli"
	},
	"keywords": [
		"eslint",
		"lockfile",
		"cli",
		"lint"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/lockfile-tools/issues"
	},
	"homepage": "https://github.com/ljharb/lockfile-tools#readme",
	"dependencies": {
		"eslint": "^8.8.0 || ^9.39.2",
		"eslint-plugin-lockfile": "0.0.0",
		"lockfile-tools": "0.0.0",
		"pargs": "^1.2.1"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@ljharb/tsconfig": "^0.3.2",
		"auto-changelog": "^2.5.0",
		"npmignore": "^0.3.4",
		"typescript": "next"
	},
	"engines": {
		"node": "^22.21.1 || ^24.12 || >= 25.2.1"
	},
	"publishConfig": {
		"ignore": []
	}
}
