{
	"name": "eslint-plugin-lockfile",
	"version": "0.0.0",
	"description": "An eslint plugin to lint your npm ecosystem lockfiles.",
	"main": "index.mjs",
	"exports": {
		".": "./index.mjs",
		"./rules/*": "./rules/*",
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"[eslint-plugin] v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/lockfile-tools.git",
		"directory": "packages/eslint-plugin"
	},
	"keywords": [
		"eslint",
		"plugin",
		"lockfile"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"lockfile-tools": "^1.0.0",
		"minimatch": "^10.1.1",
		"pacote": "^21.0.4"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@eslint/core": "^1.0.0",
		"@ljharb/tsconfig": "^0.3.2",
		"auto-changelog": "^2.5.0",
		"npmignore": "^0.3.4",
		"typescript": "next"
	},
	"peerDependencies": {
		"eslint": "^9.39.2"
	},
	"engines": {
		"node": "^22.21 || ^24.11 || >= 25.2"
	}
}
