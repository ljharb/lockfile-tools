{
	"name": "eslint-plugin-lockfile",
	"version": "1.0.0",
	"description": "An eslint plugin to lint your npm ecosystem lockfiles.",
	"main": "index.mjs",
	"exports": {
		".": "./index.mjs",
		"./rules/*": "./rules/*",
		"./package.json": "./package.json"
	},
	"sideEffects": false,
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"version": "node ../../release.mjs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/lockfile-tools.git",
		"directory": "packages/eslint-plugin"
	},
	"keywords": [
		"eslint",
		"plugin",
		"lockfile"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"lockfile-tools": "^1.0.1",
		"minimatch": "^10.1.1",
		"npm-package-arg": "^13.0.2",
		"pacote": "^21.0.4",
		"semver": "^7.7.3"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"@eslint/core": "^1.0.1",
		"@ljharb/tsconfig": "^0.3.2",
		"@types/semver": "^7.7.1",
		"auto-changelog": "^2.5.0",
		"npmignore": "^0.3.5",
		"typescript": "next"
	},
	"peerDependencies": {
		"eslint": "^9.39.2"
	},
	"engines": {
		"node": "^22.21 || ^24.11 || >= 25.2"
	},
	"publishConfig": {
		"ignore": []
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true,
		"appendGitLog": ".",
		"tagPrefix": "eslint-plugin-lockfile@"
	}
}
